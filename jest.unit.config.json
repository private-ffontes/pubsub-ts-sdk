{
  "verbose": true,
  "clearMocks": true,
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/__tests__/unit/**/*.spec.ts"],
  "coverageThreshold": {
    "global": {
      "lines": 85,
      "branches": 85,
      "functions": 85,
      "statements": 85
    }
  }
}
